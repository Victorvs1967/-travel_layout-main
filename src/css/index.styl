$main_dark = #000
$main_lite = #fff
$main_highlite = #FBD784
$main_darklite = #FFC178
$main_buttons = #FFA343
$main_border = rgba($main_lite, 30%)
$main_shift = 4.7rem
$border_radius = .5em

html,
body {
  font 18px/1.7 'Open Sans', sans-serif
}

body {
  background $main_dark url('../images/cover.jpg') center top no-repeat
  background-size 100% auto
  color $main_lite
}

a {
  text-decoration none
  color $main_highlite
  transition opacity 0.3s
  opacity 1

  &:visited {
    color darkren($main_highlite, 10)
  }

  &:hover,
  &:active {
    opacity 0.7
  }
}

.button {
  border none
  background $main_buttons
  font 700 .9rem/1 'Open Sans', sans-serif
  padding 1.6em 4.5em 1.4em
  border-radius $border_radius
  cursor pointer
  transition: background .3s

  &:hover {
    background $main_highlite
  }
}

/* Main styles */
.page {
  // overflow hidden
}

.content {
  padding 0 $main_shift $main_shift
  max-width 1460px
  margin 0 auto

  p {
    font-size 1rem
    line-height 1.5rem
    margin-bottom 1.3rem
  }

  &_small {
    // max-width 934px
    max-width 60%
    margin-left 12.5%
    padding 0 2.75rem 2.5rem
  }
}

.cover-space {
  padding-bottom 82% // width / height %
}

.header {
  position sticky
  top 0
  margin-top 2rem
  width 100%
  z-index 999
  transition background .3s

  &__content {
    display grid
    grid-template-columns auto 1fr
    padding 0 $main_shift
    align-items center
  }

  &__center {
    display flex
    justify-content center
  }

  &_scrolled {
    background rgba(0, 0, 0, .3);
  }
}

.logo {
  color $main_lite
  letter-spacing 1%
  transition transform .4s

  &:visited {
    color $main_lite
  }

  &__title {
    font-size 1.3rem
    font-weight 700
  }
}

.main-nav {
  &__list {
    display flex
  }

  &__link {
    color $main_lite
    padding 1.8rem 1.38rem
    display inline-block

    &:visited {
      color $main_lite
    }
  }
}

.search {
  display flex
  align-items center
  justify-content center

  &__icon {
    width 1rem
    height 1rem
    background url('../images/icons/search.svg') center center no-repeat
    background-size content
    cursor pointer
    padding-right 0.5rem
  }

  &__form {
    background none
    border none
    transition width 0.4s
    width 3.4rem
    font 0.9rem/1 'Open Sans', sans-serif
    padding 0.2rem 0.5rem
    border-radius 5px

    &::placeholder {
      color white
      opacity .5
    }

    &:focus {
      border none
      outline none
      width 10rem
      background white

      &::placeholder {
        color $main_dark
      }
    }
  }
}

.section__main {
  display flex
  align-items center
  flex-direction column
  position absolute
  top 0
  left $main_shift
  right $main_shift
}

.main-title {
  margin-bottom 6.2em

  &__summary {
    font-weight 600
    color: $main_darklite
    text-transform uppercase
    letter-spacing .36em
    display flex
    align-items center
    margin-bottom 1.5em
    font-size 1.2em

    &::before {
      content ''
      display block
      width 4em
      height 2px
      margin-right 1.5em
      background $main_darklite
    }
  }

  &__text {
    font-size 5.4em
    font-weight 700
    line-height 1.1

    &_regular {
      display block
      font-size .9em
      font-weight 400
    }
  }
}

.main-title_small {
  font-size 1rem
  margin-bottom 1.8em

  .main-title__summary {
    margin-bottom 1.3rem
    color: $main_highlite

    &::before {
      background $main_highlite
    }
  }

  .main-title__text {
    font-size 3.4em
    line-height 1.3
    margin-bottom 1.3rem
  }

  .arrow-link {
    display flex
    align-items center

    &__icon {
      margin .2em 0 0 .4em
    }

    &_centered {
      justify-content center
    }
  }

}

.main-title_centered {

  .main-title__summary {
    justify-content center

    &::after {
      content ''
      display block
      width 4em
      height 2px
      margin-left calc(1.5rem - .36rem)
      background $main_highlite
    }
  }
}

.social-networks {
  position absolute
  left 0
  top 14em

  &__title {
    writing-mode vertical-rl
    margin-bottom 1.3rem
  }

  &__item {
    margin-bottom 1rem
  }

  &__link {
    display inline-block
    opacity 1
    transition opacity .3s

    &:hover {
      opacity .7
    }
  }

}

.social-horisontal {
  display flex
  font-size 1.3rem

  &__item {
    display inline-block
    margin-left 2rem
  }

  &__link {
    display inline-block
    opacity 1
    transition opacity .3s

    &:hover {
      opacity .7
    }

  }
}

.scroll-down {
  display flex
  cursor pointer
  opacity 1
  transition .3s

  &:hover {
    opacity .7
  }

  &__icon {
    margin .2rem 0 0 .5rem
  }
}

/* Columns */
.section {
  padding-top 14rem
} 

.section-cols {
  display flex
  justify-content space-between
  align-items center
}

.section-col {
  &__content {
    width 50%
  }

  &__image {
    width 40%
  }
}

.section-border {
  padding-bottom 3rem
  border-bottom 1px solid $main_border
  margin-bottom 3rem
}

/* Footer */ 
.start {
  display flex
  justify-content space-between
  align-items center

  &__title {
    font-size 2.66rem
    font-weight 700
    margin-right 3rem
  }

  &__content {
    display flex
    align-items baseline
  }

  &__desc {
    font-size 1.22rem
    margin-right 3rem
  }
}

.footer {

  &__content {
    display flex
    justify-content space-between
    margin-bottom 7rem
  }

  &__bottom {
    display flex
    justify-content space-between
    padding 0 2.22rem
  }

  &__link {
    color $main_lite
    font-size .833rem
    display inline-block
    margin-right 4.5rem

    &:hover,
    &:visited,
    &:active {
      color $main_lite
    }

    &:last-child {
      margin-right 0
    }
  }
}

.subscribe {
  width 27%

  &__title {
    font-size 2rem
    font-weight 700
    line-height 1.4
    margin-bottom 1.38rem
  }
}

.email {
  width 100%
  display grid
  grid-template-columns 1fr auto
  border-bottom 1px solid $main_border

  &__form {
    background none
    border none
    font .83/1 'Open Sans', sans-serif
    padding 1.1em .77em 1.77em
    color $main_light

    &::placeholder {
      color rgba($main_lite, 50%)
    }

    &:focus {
      border none
      outline none
    }
  }

  &__button {
    position relative
    padding 0
    height 100%
    width 3.55rem
    border-radius $border_radius $border_radius 0 0
    display flex
    justify-content center
    align-items center
  }
}

.menu {
  display flex
  flex-direction column

  &__title {
    color $main_highlite
    font-weight 700
    font-size 1.1rem
    margin-bottom .6rem
  }

  &__item {
    margin-bottom 0.8rem
  }

  &__link {
    color $main_lite

    &:hover,
    &:visited,
    &_active {
      color $main_lite
    }
  }
}

/* Gallery */
.gallery {
  &__slide {
    width 100%
    padding-bottom 67%
    pointer-events none
    background-size cover
  }
  
  &__content {
    position absolute
    bottom 0
    left 0
    right 0
    text-align center
    background linear-gradient(to top, rgba(0, 0, 0, .75) 0%, rgba(0, 0, 0, 0) 100%)
  }
}

/* Icons */
.icon__instagram {
  width 1.3em
  height 1.3em
  background url('../images/icons/instagram.svg') center center no-repeat
  background-size contain
}

.icon__facebook {
  width 1.3em
  height 1.3em
  background url('../images/icons/facebook.svg') center center no-repeat
  background-size contain
}

.icon__twitter {
  width 1.3em
  height 1.3em
  background url('../images/icons/twitter.svg') center center no-repeat
  background-size contain
}

.icon__arrow_downward {
  width 1em
  height 1.4em
  background url('../images/icons/arrow_downward.svg') center center no-repeat
  background-size contain
}

.icon__arrow_rightward {
  width 1.4em
  height 1em
  margin-left 9px
  background url('../images/icons/arrow_rightward.svg') center center no-repeat
  background-size contain
}

.icon__right {
  width 1.5em
  height 1.5em
  background url('../images/icons/arrow_right.svg') center center no-repeat
  background-size contain
}

.burger-menu {
  display grid
  grid-template-columns 1fr

  &__content {
    display grid
    grid-template-columns 1fr auto
  }

  &__control {
    display none
  }
}

@media(max-width 1790px) {
  html,
  body {
    font-size 16px
  }

  .section-col {
    &__image {
      width 40%
    }

    &__content {
      width 50%
    }
  }

  .content {
    max-width 1200px
  }
}

@media(max-width 1550px) {
  html,
  body {
    font-size 14px
  }
}

@media(max-width 1380px) {

  .section-col {
    &__content {
      width 50%
    }

    &__image {
      width 43%
    }
  }
}

@media(max-width 1280px) {

  .main-title {
    font-size .9rem
  }

  .subscribe {
    width 35%
  }
}

/* Mobile version */
@media(max-width 750px) {

  .header {
    &__content {
      padding 1rem 1.5rem
    }
  }

  .section {
    margin-bottom 1.5rem
    padding-top 4rem

    &__main {
      margin-bottom 4rem
      padding 0 1.5rem
    }
  }

  .section-cols {
    flex-direction column
  }

  .section-col {
    &__image,
    &__content {
      width 100%
    }

    &__image {
      margin-bottom 3rem
      order 1
    }

    &__content {
      order 2
    }
  }

  .content {
    padding 0 1.5rem 1.5rem
  }

  .start {
    display block
    margin 0
    text-align center

    &__content {
      display block
    }

    &__title,
    &__desc {
      margin 0
    }

    .button {
      margin-top 1rem
      width 100%
    }
  }

  .footer {
    &__content {
      display block
      margin-bottom 3rem

      .subscribe {
        width 100%
        margin-bottom 3rem
      }

      .menu {
        text-align center

        &__title {
          margin-top 1rem
        }
      }
    }

    &__bottom {
      display block
      padding 0
      text-align center
    }

    &__terms {
      margin-bottom 2rem
    }

    &__link {
      margin 0 1rem
    }

    .social-horisontal {
      justify-content center

      &__item {
        margin-left 0
        margin 0 1rem
      }
    }
  }

  .gallery {

    &__slide {
      padding-bottom 180%
    }

    &__content {
      width 100%
      top 0
      display flex
      align-items center
      background rgba(0, 0, 0, .3)
    }

    .content_small {
      max-width 80%
      margin-left 0
      padding 1.5rem
    }

  }

  .main-title {
    text-align center
    margin-bottom 2em

    &__text {
      font-size 3em
    }

    &__summary {
      display block
      margin-bottom 1em

      &::before {
        display none
      }
    }

    .main-title__summary::after {
      display none
    }

    &_small {
      font-size .8em
    }
  }

  .section__main {
    position static
  }

  .social-networks {
    position static
    display flex
    align-items center

    &__list {
      display flex
    }

    &__item {
      margin-left 1rem
    }

    &__title {
      writing-mode initial
    }
  }

  /* Burger Menu */ 
  .burger-menu {
    display block
    position fixed
    top 0
    right 0
    bottom 0
    width 70vw
    background #000
    transform translate3d(70vw, 0, 0)
    transition: transform .4s
    z-index 999

    &__content {
      height 100vh
      display block
      padding 1rem 0 1rem
      display grid
      box-sizing border-box
      grid-template-columns 1fr
      grid-template-rows 1fr auto
    }

    &__control {
      display block
      width 2rem
      height 2rem
      position absolute
      top 3rem
      left calc(-1.5rem - 1.5rem)
      background url('../images/icons/menu.svg') center center no-repeat
      background-size content
      border none
      cursor pointer
      transition opacity .3s

      &:hover {
        opacity .7
      }

      &_scrolled {
        top 1rem
      }
    }
  }

  .burger-menu_opened {
    transform translate3d(0, 0, 0)
    transition transform .4s

    .burger-menu__control {
      background-image url('../images/icons/x.svg')
      left -3rem
    }
  }

  .space-cover {
    display none
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0, 0, 0, .5)

    &_visible {
      display block
      transition background .3s
    }
  }

  .main-nav {
    display block
    margin-bottom 1rem

    &__list {
      display block
    }

    &__link {
      width 100%
      padding 1.2rem
      box-sizing border-box
      text-align center

      &:hover,
      &_active {
        background #fff
        color #000 !important
        opacity 1
        transition all .3s
      }
    }
  }


}